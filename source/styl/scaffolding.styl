.b-header
  position fixed
  top 0
  left 0
  width 100%
  height 100px
  padding-top 20px
  padding-bottom 20px
  background-color rgba( 68,68,68,.5 )
  color #fff
  z-index 100
  
  a, a:hover
    color #fff
  
  .container
    display flex
    align-items center
    justify-content space-between
    
  &-top-menu
    font-size 10.5pt
    font-family "Open Sans Condensed", Arial, sans-serif
    text-transform uppercase
    letter-spacing 1px
    margin 0
    
    li
      display inline-block
      margin 0 11px
      
    @media( max-width 1400px )
      display none
      
  &-icons
    text-align right
      
    &__phone
      font-size 13.5pt
      font-weight bold
      
      span
        display inline-block
        vertical-align top
        
      .b-phone-icon
        margin-right 16px
        margin-top 2px
      
  &-btn
    display inline-block
    font-size 8pt
    line-height 21px
    height 21px
    border-radius 11px
    font-family "Open Sans Condensed", Arial, sans-serif
    text-transform uppercase
    letter-spacing 1px
    background-color rgba( 223,223,223,.52)
    padding 0 14px
    
    &:hover
      opacity 1
      text-decoration none
    
  &-nav.b-menu-icon
    margin 10px 0 0 30px
    display none
    
    @media( max-width 1400px )
      display block
        
  .b-header-logo
  
    img
      vertical-align top
              
.b-phone-icon
  i
    display inline-block
    width 16px
    height 16px
    background embedurl( 'img/phone-call.svg' ) no-repeat center center
    background-size cover
      
.b-menu-icon
  i
    display inline-block
    vertical-align top
    width 32px
    height 32px
    background embedurl( 'img/menu-icon.png' ) no-repeat center center
    
.b-footer
  background-color #343232
  height 140px
  padding-top 35px
  
  &-icons
    text-align right
      
    &__phone
      font-size 13.5pt
      font-weight bold
      color #fff
      
      span
        display inline-block
        vertical-align top
        
      .b-phone-icon
        margin-right 16px
        margin-top 2px
      
  &-btn
    font-size 8pt
    line-height 21px
    border-radius 11px
    font-family "Open Sans Condensed", Arial, sans-serif
    text-transform uppercase
    letter-spacing 1px
    background-color rgba( 223,223,223,.52)
    padding 0 14px
    color #fff
    display inline-block
    
    &:hover
      opacity 1
      text-decoration none
      
  a
    &:hover,
    &:focus
      color #fff