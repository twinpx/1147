@import '../../styl/component-include.styl'

@keyframes impression-preloader
  0%
    transform rotate(0deg)
  50%
    transform rotate(180deg)
  100%
    transform rotate(360deg)
    
.b-top-gallery

  .col
    position relative
    
    &:nth-of-type(1)
      padding-right 0
    
    &:nth-of-type(2)
      padding-left 0
      
    @media( max-width 767px )
      padding-right 0 !important
      padding-left 0 !important
  
  &__note
    font-size 8pt
    color #fff
    text-align center
    width 100%
    position absolute
    bottom 20px
    left 0
    padding 0 20px
    line-height 1.1
    z-index 2

  &__text
    background url( 'images/pattern.png' ) no-repeat right top #f5f5f5
    height 637px
    text-align center
    font-family "Akrobat", "Open Sans Condensed", Arial, sans-serif
    font-size 21pt
    padding-top 165px
    padding-right 15px
    padding-left 15px
    
    p
      text-align center
    
    @media( max-width 767px )
      font-size 16pt
      padding-right 30px
      padding-left 30px