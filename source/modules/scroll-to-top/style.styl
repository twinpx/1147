@import '../../styl/component-include.styl'

.b-scroll-to-top
  text-align center
  position fixed
  right 50px
  bottom -120px
  z-index 100
  cursor pointer
  transition( bottom 0.5s cubic-bezier(0.68, -0.55, 0.265, 1.55), transform .5s ease )
  
  @media( max-width 600px )
    right 18px
  
  &:before
    content ''
    display block
    background-color #73a633
    width 83px
    height 90px
    transform( skewY(25deg))
    position absolute
    bottom 0
    right 0
  
  &:after
    content ''
    display block
    width 20px
    height 20px
    border-top 2px solid #fff
    border-right 2px solid #fff
    transform( rotate( -45deg ))
    position absolute
    bottom 30px
    right 31px
    
  &:hover
    transform( scale( 1.05 ))
    
  &.i-show
    bottom 100px
    
    @media( max-width 600px )
      bottom 38px
    
  @media( max-width 600px )
  
    &:before
      width 50px
      height 50px
    
    &:after
      width 17px
      height 17px
      bottom 15px
      right 17px
    
    