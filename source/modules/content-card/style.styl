@import '../../styl/component-include.styl'

.b-content-card
  position relative
  padding-top 100%
  font-size 13pt
  
  @media( min-width 601px) and ( max-width 900px )
    font-size 10.5pt
  
  @media( min-width 601px) and ( max-width 1500px )
    padding-top 0
  
  &__wrapper
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    padding 30px
    border 1px solid #c2c2c2
    
    &:hover
      border-color #eeede7
      background-color #eeede7
      
    @media( min-width 601px) and ( max-width 900px )
      padding 20px
      
    @media( min-width 601px) and ( max-width 1500px )
      position static
      top auto
      left auto
      width auto
      height auto
      
  .b-letter
    margin 15px 0 35px 54px
    font-weight bold
    position relative
    line-height 1.1
    
    @media( min-width 601px) and ( max-width 900px )
      margin-left 49px
    
    span
      font-size 51pt
      position absolute
      top -27px
      left -50px
    
      @media( min-width 601px) and ( max-width 900px )
        left -45px
      
  .b-price
    font-size 22pt
    font-weight bold
    margin-bottom 40px
    
    span
      white-space nowrap
    
    @media( min-width 1101px) and ( max-width 1500px )
      font-size 16pt
    
    @media( min-width 901px) and ( max-width 1100px )
      font-size 14pt
      
    @media( min-width 601px) and ( max-width 900px )
      font-size 10.5pt
    
  .btn
    position absolute
    bottom 30px
    left 30px
    
    @media( min-width 601px) and ( max-width 1500px )
      position static
      bottom auto
      left auto
