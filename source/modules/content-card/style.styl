@import '../../styl/component-include.styl'

.b-content-card
  font-size 13.5pt
  text-transform uppercase
  text-align center
  background-color #f6f6f6
  color #333333
  line-height 64px
  height 64px
  cursor pointer
  
  &.i-active
    color #73a633
    border 4px solid #73a633
    line-height 56px
    
.b-flats__block
  display none
  
  .col
    text-align center
  
  img
    cursor pointer
    border 4px solid #f6f6f6
    
    &.i-active
      cursor default
      border 4px solid #73a633
  
.b-flat-info
  
  &__text
    text-align center
    border 1px solid #f6f6f6
    background-repeat no-repeat
    background-position right top
    padding 35px 35px 67px !important
    
    @media( max-width 767px )
      margin 0
      width auto
    
    b
      font-size 17pt
      
    p
      margin-bottom 35px